<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewReqFoodQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cant.  x  "
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textViewReqFoodUnitPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unit price"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/textViewReqFoodQuantity"/>


    <TextView
        android:id="@+id/textViewReqFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Food Description"
        android:textColor="#000000"
        android:layout_below="@+id/textViewReqFoodQuantity" />

    <TextView
        android:id="@+id/textViewReqFoodSubTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sub total"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:digits=""
        android:textSize="17sp"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/textViewReqFoodQuantity"/>


</RelativeLayout>
